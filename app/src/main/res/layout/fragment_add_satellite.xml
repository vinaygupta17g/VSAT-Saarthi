<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".AddSatellite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="16dp"
        android:clipToPadding="false">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- ISRO Logo -->
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/isro"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="ISRO Logo"/>

                <!-- Title: Add Satellite In VSAT Saarthi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Satellite In VSAT Saarthi"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="32dp"/>

                <!-- Satellite Name Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satellite Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/satname"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textCapCharacters"
                    android:hint="e.g. INSAT-4A"
                    android:background="@drawable/input_field_background"
                    android:textColor="@color/text_input_text"
                    android:textColorHint="@color/text_input_hint"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="INSAT-4A"/>

                <!-- Satellite Latitude Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satellite Latitude"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/satlatitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="e.g. 0.0 (for Geostationary)"
                    android:background="@drawable/input_field_background"
                    android:textColor="@color/text_input_text"
                    android:textColorHint="@color/text_input_hint"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="0.0"/>

                <!-- Satellite Longitude Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satellite Longitude"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/satlongitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="e.g. 83.0 (East) or -10.5 (West)"
                    android:background="@drawable/input_field_background"
                    android:textColor="@color/text_input_text"
                    android:textColorHint="@color/text_input_hint"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="83.0"/>

                <!-- Satellite Altitude Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satellite Altitude"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/sataltitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="numberDecimal"
                    android:hint="e.g. 35786 (in km)"
                    android:background="@drawable/input_field_background"
                    android:textColor="@color/text_input_text"
                    android:textColorHint="@color/text_input_hint"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="35786"/>

                <!-- Add Satellite Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addsatellite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD SATELLITE"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg"
                    android:textSize="18sp"
                    android:paddingVertical="12dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>