<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LookUpAngle"
    android:background="@color/black"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:scrollIndicators="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                app:cardCornerRadius="100dp"
                android:elevation="30dp"
                app:cardElevation="30dp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                tools:targetApi="p">
                <ImageView
                    android:id="@+id/earth"
                    android:layout_width="1000dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/world"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Location"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <EditText
                            android:id="@+id/userlongitude"
                            android:layout_height="48dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_container"
                            android:hint="Longitude"
                            android:inputType="numberDecimal|numberSigned"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/text_input_text"
                            android:textColorHint="@color/text_input_hint"
                            android:maxLines="1"
                            android:singleLine="true"/>

                        <EditText
                            android:id="@+id/userLatitude"
                            android:layout_height="48dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/rounded_container"
                            android:hint="Latitude"
                            android:inputType="numberDecimal|numberSigned"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/text_input_text"
                            android:textColorHint="@color/text_input_hint"
                            android:maxLines="1"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/setlonglat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:text="GET CURRENT LOCATION"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:paddingVertical="12dp"
                        android:textAllCaps="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Satellite"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:popupBackground="@color/card_background"
                            android:background="@drawable/rounded_container"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/separator_color"
                        android:textStyle="bold"
                        android:text="OR"/>
                        <Spinner
                            android:id="@+id/satdish"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:popupBackground="@color/card_background"
                            android:background="@drawable/rounded_container"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/satLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_container"
                        android:paddingStart="16dp"
                        android:enabled="false"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical"
                        android:hint="Satellite Longitude"
                        android:textSize="16sp"
                        android:textColor="@color/text_input_text"
                        android:textColorHint="@color/text_input_hint"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_container"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latitude :"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:layout_marginBottom="4dp"/>
                            <EditText
                                android:id="@+id/satlatitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:enabled="false"
                                android:textColor="@color/satellite_value_color"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_container"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Altitude :"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:layout_marginBottom="4dp"/>
                            <EditText
                                android:id="@+id/sataltitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:enabled="false"
                                android:textColor="@color/satellite_value_color"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_bg"
                android:text="CALCULATE LOOK UP ANGLE"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingVertical="12dp"
                android:textAllCaps="true"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/angleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculated Angles"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_container"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Elevation Angle:"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/elevation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/user_value_color"
                                tools:text="45.0°"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_container"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Azimuth Angle:"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/azimuth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/user_value_color"
                                tools:text="180.0°"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/compass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_bg"
                android:text="TRACK SATELLITE BY COMPASS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:paddingVertical="12dp"
                android:textAllCaps="true" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/navbar"/>
</LinearLayout>